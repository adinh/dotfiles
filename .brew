#!/usr/bin/env bash

brew update
brew upgrade --all

formulas=(
  ack
  autoconf
  bash
  bash-completion
  chruby
  ctags
  elasticsearch
  ffmpeg
  findutils
  fontforge
  freetds
  gettext
  git
  "grep --default-names"
  "gnu-sed --default-names"
  gradle
  "imagemagick --with-webp"
  ipcalc
  jpeg
  libpng
  libtiff
  lua
  mercurial
  mongodb
  mysql
  node
  ngrep
  phantomjs
  pkg-config
  readline
  reattach-to-user-namespace
  ruby-build
  selecta
  sqlite
  the_silver_searcher
  unixodbc
  "vim --override-system-vi"
  watch
  "wget --with-iri"
)

for formula in "${formulas[@]}"
do
  brew install $formula
done

brew cleanup --force