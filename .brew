#!/usr/bin/env bash

set -eu

brew update
brew upgrade --all

formulas=(
  ack
  autoconf
  automake
  bash
  bash-completion2
  chruby
  cmake
  ctags
  elasticsearch
  ffmpeg
  figlet
  findutils
  fontforge
  freetds
  fzf
  gettext
  git
  go
  "grep --default-names"
  "gnu-sed --default-names"
  gradle
  graphviz
  "imagemagick --with-webp"
  ipcalc
  jpeg
  jq
  libpng
  libtiff
  mongodb
  mysql
  node
  ngrep
  phantomjs
  pkg-config
  postgresql
  python
  readline
  reattach-to-user-namespace
  ripgrep
  ruby-build
  sqlite
  the_silver_searcher
  tmux
  tree
  unixodbc
  "vim --override-system-vi"
  watch
  "wget --with-iri"
)

for formula in "${formulas[@]}"
do
  brew install $formula
done

brew cleanup --force
