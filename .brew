#!/usr/bin/env bash

set -eu

brew update
brew upgrade --all

formulas=(
  ack
  autoconf
  automake
  bash
  chruby
  cmake
  ctags
  elasticsearch
  elixir
  ffmpeg
  figlet
  findutils
  fontforge
  freetds
  fzf
  gettext
  git
  go
  "grep --with-default-names"
  "gnu-sed --with-default-names"
  gradle
  graphviz
  "imagemagick --with-webp"
  ipcalc
  jpeg
  jq
  leiningen
  libpng
  libtiff
  neovim
  node
  ngrep
  phantomjs
  pkg-config
  python
  readline
  reattach-to-user-namespace
  ripgrep
  ruby-build
  sqlite
  the_silver_searcher
  tmux
  tree
  unixodbc
  "vim --override-system-vi"
  watch
  wget
)

for formula in "${formulas[@]}"
do
  brew install $formula
done

brew cleanup --force
